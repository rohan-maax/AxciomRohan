
@{
    ViewData["Title"] = "Settings";
}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bootstrap Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">

    <style>
        /* Custom styles to set sidebar width and fix its position */
        .sidebar {
            width: 250px;
            min-height: 80vh; /* Make the sidebar take up the full height */
            position: fixed;
            top: 4rem;
            left: 10px;
            z-index: 1000;
            border-radius: 20px;
            background-color: aliceblue;
        }
        /* Adjust the main content to leave space for the fixed sidebar */
        .main-content {
            margin-left: 250px; /* Same width as the sidebar */
            padding: 20px;
        }
        /* Customizing the nav-link for better visual hierarchy */
        .sidebar .nav-link {
            padding: 10px 15px;
            margin-top: 5px;
            color: darkblue; /* White text for a dark sidebar */
            border-radius: 20px;
        }

            .sidebar .nav-link:hover {
                background-color: #a8dadc;
                border-radius: 20px;
            }

            .sidebar .nav-link.active {
                background-color: #a8dadc;
                font-weight: bold;
                border-radius: 20px;
            }
    </style>
</head>
<body>

    <div class="sidebar text-black-50 p-3">
        <h4 class="mb-4 text-center border-bottom pb-2">Dashboard Panel</h4>

        <nav class="nav flex-column">
            <a class="nav-link " aria-current="page" asp-controller="Dashboard" asp-action="Dashboard">
                <i class="bi bi-speedometer2 me-2"></i> Dashboard
            </a>

            <a class="nav-link " asp-controller="Dashboard" asp-action="Customers">
                <i class="bi bi-people me-2"></i> Customers
            </a>

            <a class="nav-link " asp-controller="Dashboard" asp-action="Employees">
                <i class="bi bi-person-workspace me-2"></i> Employees
            </a>

            <a class="nav-link" asp-controller="Dashboard" asp-action="Reports">
                <i class="bi bi-graph-up me-2"></i> Reports
            </a>

            <a class="nav-link active" asp-controller="Dashboard" asp-action="Settings">
                <i class="bi bi-gear me-2"></i> Settings
            </a>
        </nav>
    </div>

    <div class="main-content">
        <header class="mb-4">
            <h1>Welcome to the Dashboard</h1><h1>Settings</h1>
            <p>This is where the main content of your application will go.</p>
        </header>

        <div class="card p-4">
            <h3>Content Area</h3>
            <p>Use Bootstrap's grid system (rows and columns) here to organize your charts, tables, and other components.</p>
        </div>
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card p-3">
                    <h5>Widget 1</h5>
                    <p>Some important data here.</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card p-3">
                    <h5>Widget 2</h5>
                    <p>More relevant information.</p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous">
    </script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

</body>
</html>