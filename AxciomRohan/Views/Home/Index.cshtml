@{
    ViewData["Title"] = "Home Page";
}



<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Home Page</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>

        h1,h2, h3, h4, h5, h6, p{
            color: white;
        }
        .hero {
            min-height: 70vh;
            display: flex;
            align-items: center;
            color:white;
        }

        .feature-icon {
            width: 64px;
            height: 64px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
            background: rgba(0,0,0,0.05);
            font-size: 28px;
        }

        .pricing-card {
            border-radius: 12px;
        }

        .contact-card {
            background: linear-gradient(180deg, #fff, #fbfbff);
        }

        .navbar{
            border-radius: 20px;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="#">AcxiomERP</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="nav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#features">Features</a></li>
                    <li class="nav-item"><a class="nav-link" href="#pricing">Pricing</a></li>
                    <li class="nav-item"><a class="nav-link" href="#contact">Contact</a></li>
                    <li class="nav-item"><a class="btn btn-primary ms-2" href="#">Request Demo</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <header class="hero">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="display-5 fw-bold color-white">ERP that grows with your business</h1>
                    <p class="lead ">Unified finance, inventory, sales and HR with powerful analytics.</p>
                    <div class="d-flex gap-2 mt-4">
                        <a href="#contact" class="btn btn-primary btn-lg">Get Started</a>
                        <a href="#features" class="btn btn-outline-primary btn-lg text-light">See Features</a>
                    </div>
                </div>
                <div class="col-lg-6 d-none d-lg-block">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <img src="https://via.placeholder.com/640x360.png?text=ERP+Dashboard" class="img-fluid rounded">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <section id="features" class="py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="h3 text-light">Features</h2>
                <p class="">Everything you need to run your business.</p>
            </div>

            <div class="row g-4">
                <div class="col-md-4">
                    <div class="p-4 h-100 shadow-sm rounded bg-white">
                        <div class="feature-icon mb-3">💼</div>
                        <h5 class="text-dark">Finance & Accounting</h5>
                        <p class="text-dark">General ledger, invoicing & multi-currency support.</p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="p-4 h-100 shadow-sm rounded bg-white">
                        <div class="feature-icon mb-3">📦</div>
                        <h5 class="text-dark">Inventory Management</h5>
                        <p class="text-dark">Real-time stock, warehouses, supply chain automation.</p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="p-4 h-100 shadow-sm rounded bg-white">
                        <div class="feature-icon mb-3">📊</div>
                        <h5 class="text-dark">Analytics & Reports</h5>
                        <p class="text-dark">Custom dashboards for smart decisions.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="pricing" class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-4">
                <h2 class="h4">Pricing</h2>
                <p class="text-dark">Transparent and scalable pricing plans.</p>
            </div>

            <div class="row g-4 justify-content-center">
                <div class="col-md-4">
                    <div class="card pricing-card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">Starter</h5>
                            <h3 class="card-price text-dark">$49<span class="text-muted small">/mo</span></h3>
                            <ul class="mt-3">
                                <li>Core modules</li>
                                <li>Up to 5 users</li>
                                <li>Email support</li>
                            </ul>
                            <a href="#contact" class="btn btn-outline-primary mt-3">Choose</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card pricing-card shadow-sm border-primary h-100">
                        <div class="card-body">
                            <h5 class="card-title">Business</h5>
                            <h3 class="card-price text-dark">$199<span class=" small">/mo</span></h3>
                            <ul class="mt-3">
                                <li>All modules</li>
                                <li>Up to 50 users</li>
                                <li>Priority support</li>
                            </ul>
                            <a href="#contact" class="btn btn-primary mt-3">Choose</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <section id="contact" class="py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h3>Contact Us</h3>
                    <p class="">We will reach out with full demo access.</p>

                    <div class="card contact-card shadow-sm">
                        <div class="card-body">

                            <form>
                                <div class="mb-3">
                                    <label class="form-label">Name</label>
                                    <input type="text" class="form-control" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" class="form-control" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Company</label>
                                    <input type="text" class="form-control" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Message</label>
                                    <textarea rows="3" class="form-control"></textarea>
                                </div>
                                <button class="btn btn-primary">Submit</button>
                            </form>

                        </div>
                    </div>

                </div>

                <div class="col-lg-6 d-none d-lg-block">
                    <div class="p-4">
                        <h5>Office Address</h5>
                        <p class="small">123 Business Rd, Suite 100, City, Country</p>
                        <h6>Email</h6>
                        <p class=" small">sales@acmeerp.com</p>
                        <h6>Phone</h6>
                        <p class=" small">+1 (555) 123-4567</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

   

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
```
